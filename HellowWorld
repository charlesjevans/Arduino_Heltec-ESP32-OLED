// Example: How to send output to the ESP32 built-in OLED display

// Name the libraries to include:
#include <Arduino.h>
#include <U8g2lib.h>

// Name the display driver to use from the U8g2 library:
U8G2_SSD1306_128X64_NONAME_F_SW_I2C u8g2(U8G2_R0, /* clock=*/ 15, /* data=*/ 4, /* reset=*/ 16);

void setup(void) {
  u8g2.begin();
}

void loop(void) {
  u8g2.clearBuffer();                    //clear prior contents of buffer
  u8g2.setFont(u8g2_font_profont17_tf);  //specify the font to use
  u8g2.drawStr(10,40,"Hello World!");	   //write a message to the buffer
  u8g2.sendBuffer();					           //send the contents of the buffer to the display
  delay(1000);  
}
